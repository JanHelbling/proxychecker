# Maintainer: Jan Helbling <jan.helbling@gmail.com>
# Contributor: Jan Helbling <jan.helbling@gmail.com>
_name=ProxyChecker
pkgname="${_name}"
pkgver=1.2
pkgrel=1
pkgdesc="A multithreaded,advanced ProxyChecker and Hitfaker"
arch=('any')
url="https://github.com/JanHelbling/ProxyChecker/archive/1.2.tar.gz"
license=('GPL-3+')
provides=('proxychecker')
source=("${url}")
depends=('python>=3')
md5sums=('6be3a97821b0df8f18d842369fd0aa7a')

build() {
   cd "${_name}-${pkgver}"
   rm bin/proxychecker.py
   python setup.py build
}

package() {
   cd "${_name}-${pkgver}"
   python setup.py install --prefix="${pkgdir}"
}
